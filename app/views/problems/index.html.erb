<h3><%=t :listing %></h3>
<hr/>
<div id="table_container">
  <table class="data_table custom">
    <thead>
      <tr>
        <th><%=t :prob_title %></th>
        <th><%=t :prob_type %></th>
        <th width="10%"><%=t :attempt_accepted %></th>
      </tr>
    </thead>
    <tbody>
      <% @problems.each do |problem| %>
        <tr onclick="location.href='<%= problem_path(problem) %>'" style='cursor:pointer'>
          <td><%=  problem.title(params[:locale]) %></td>
          <td><%=  problem.topics.map{|t| t.name}.to_s.gsub("\"","").gsub("[","").gsub("]","") %></td>
          <td>
          <% if problem.has_accepted_attempt_for_user?(current_user) %>
            <i class="icon-ok-sign icon-2x icono-accept"></i>
          <% else %>
            <i class="icon-remove-sign icon-2x icono-fail"></i>
          <% end%>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
