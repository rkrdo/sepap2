<h3><%=t :listing_assignments %></h3>
<hr/>
<div id="table_container">
  <table class="data_table">
    <thead>
    <tr>
      <th><%=t :prob_title %></th>
      <th><%=t :prob_class %></th>
      <th><%=t :prob_type %></th>
      <th><%=t :due_date %></th>
      <th width="10%"><%=t :attempt_accepted %></th>
    </tr>
    </thead>
    <tbody>
  <% @assignments.each do |assignment| %>
    <tr onclick="location.href='<%= assignment_problem_path(assignment, assignment.problem) %>'" style='cursor:pointer'>
      <td><%= assignment.title %></td>
      <td><%= assignment.group.subject.name%></td>
      <td><%= assignment.problem.topics.map{|t| t.name}.to_s.gsub("\"","").gsub("[","").gsub("]","") %></td>
      <td><%= assignment.due_date %></td>
      <td>
        <% if assignment.accepted_for_user?(current_user) %>
          <i class="icon-ok-sign icon-2x icono-accept"></i>
        <% else %>
          <i class="icon-remove-sign icon-2x icono-fail"></i>
        <% end%>
      </td>
    </tr>
  <% end %>
    </tbody>
  </table>
</div>
