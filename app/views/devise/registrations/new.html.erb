<div class="row">
  <div class="panel eight columns centered" id="devise-form">
    <div class="row">
      <% flash.each do |key, value| %>
        <%= content_tag(:div, class: "alert-box #{key}") do %>
          <%= value %>
          <%= content_tag(:a,"x", class:"close") %>
        <% end %>
      <% end %>
    </div>
    <div id="wrapper2">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <div class="upper">
          <h1><%=t :register %></h1>
          <%= image_tag("tec_logo.png", size: "240x100", class:"logo_tec") %>
        </div>

        <div class="five columns centered">
          <div class="content">
            <%= f.text_field :num, :placeholder=>"#{t :studentID}", :class=>"input username"  %>
            <%= f.email_field :email, :placeholder=>"mail@mail.com", :class=>"input username"  %>

            <%= f.password_field :password, :placeholder=>"#{t :password}", :class=>"input password" %>
            <%= f.password_field :password_confirmation, :placeholder=>"#{t :password_confirm}", :class=>"input password" %>
            <div class="locale_container">
              <% if I18n.locale == :en %>
                <%=link_to "Spanish", :locale=>'es' %>
              <% else %>
                <%=link_to "InglÃ©s" , :locale=>'en' %>
              <% end %>
            </div>
          </div>

          <div class="footer">
            <div>
              <%= f.submit "#{t :sign_up}", :class=>"button"  %>
            </div>
            <div class="back-link">
              <%= link_to "#{t :back}", root_path(locale: params[:locale]) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
