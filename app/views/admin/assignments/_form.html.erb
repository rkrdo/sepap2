<%= form_for([:admin, @admin_assignment], :html=>{:class=>"custom"}) do |f| %>
  <% if @admin_assignment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_assignment.errors.count, "error") %> prohibited this admin_assignment from being saved:</h2>

      <ul>
      <% @admin_assignment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="twelve mobile-four columns">
      <%= f.text_field :title, :placeholder => "Title" %>
    </div>
  </div>
  <div class="row">
    <div class="six mobile-two columns">
      <%= f.label :problem %>
      <%= f.select :problem_id, options_from_collection_for_select(Problem.all, 'id', 'title')%>
    </div>
    <div class="six mobile-two columns">
      <%= f.label :group %>
      <%= f.select :group_id, options_from_collection_for_select(Group.all, 'id', 'name')%>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
