<h1>Listing problems</h1>
<div id="table_container">
  <table class="data_table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Dificulty</th>
        <th>Active</th>
          <th>Activate</th>
          <th>Edit</th>
          <th>Delete</th>
      </tr>
    </thead>
    <tbody>
    <% @problems.each do |problem| %>
      <tr>
        <td onclick="location.href='<%= admin_problem_path(problem) %>'" style="cursor:pointer"> <%= problem.title(params[:locale]) %></td>
        <td><%= problem.dificulty %></td>
        <td><%= problem.active? %></td>
        <td><%= activate_problem(problem)  %></td>
        <td><%= link_to 'Edit', edit_admin_problem_path(problem)  %></td>
        <td><%= link_to 'Destroy', [:admin, problem], confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br />
<%= link_to 'New Problem', new_admin_problem_path, :class=>"button success" %>
